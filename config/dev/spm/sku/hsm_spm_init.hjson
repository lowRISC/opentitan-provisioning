[
    // Keygen commands.
    {
        "command": "rsa-generate",
        "label": "spm-rsa-wrap-v0",
        "key_length": 3072,
        "public_exponent": 65537,
        "wrapping": true,
        "extractable": false,
        "public_template": {
            CKA_CLASS: "CKO_PUBLIC_KEY",
            CKA_LABEL: "spm-rsa-wrap-v0",
            CKA_ENCRYPT: true,
            CKA_VERIFY: true,
            CKA_TOKEN: true,
        },
        "private_template": {
            CKA_CLASS: "CKO_PRIVATE_KEY",
            CKA_LABEL: "spm-rsa-unwrap-v0",
            CKA_DECRYPT: true,
            CKA_SIGN: true,
            CKA_TOKEN: true,
            CKA_SENSITIVE: true,
        }
    }
    {
        // Use NIST P-384 curve for the ECDSA key.
        "command": "ecdsa-generate",
        "label": "spm-hsm-id-v0",
        "curve": "1.3.132.0.34",
        "wrapping": false,
        "extractable": false,
        "public_template": {
            CKA_LABEL: "spm-hsm-id-v0.pub",
            CKA_VERIFY: true,
            CKA_TOKEN: true,
        },
        "private_template": {
            CKA_LABEL: "spm-hsm-id-v0.priv",
            CKA_SIGN: true,
            CKA_TOKEN: true,
            CKA_EXTRACTABLE: true,
        }
    }

    // Key export commands.
    {
        "command": "rsa-export",
        "label": "spm-rsa-wrap-v0",
        "private": false,
        "format": "Pem",
        "filename": "spm-rsa-wrap-v0.pem"
    }
]
